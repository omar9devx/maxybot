# ===============================================
# Maxy Bot Configuration File
# Copy this file to .env and fill in your values
# ===============================================

# --- Discord Bot Token ---
# Get this from the Discord Developer Portal: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=

# --- Dashboard OAuth2 Credentials ---
# Also from the Discord Developer Portal, under the "OAuth2" section
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
# IMPORTANT: Add this exact URL to your OAuth2 Redirects in the Discord Dev Portal
DISCORD_REDIRECT_URI=
# This Var will auto-generated
ENCRYPTION_KEY=
# --- Bot Development ---
# (Optional) Your server's ID for instant slash command syncing (highly recommended for development).
# Leave blank for global syncing in production (can take up to an hour).
GUILD_ID=
OWNER_IDS=

# --- API Keys for Commands ---
# Get a free key from https://makersuite.google.com/ for the built-in Gemini chat command
GEMINI_API_KEY=
# Get a free key from https://openweathermap.org/api for the /weather command
OPENWEATHER_API_KEY=
# Get a key from https://tenor.com/gifapi/documentation for GIF commands
TENOR_API_KEY=



# -- Dashboard Server Configuration ---
# The base URL where your dashboard will be accessible (no trailing slash)
PUBLIC_BASE=
DASHBOARD_PORT=
# A long, random string for securing sessions. A secure one is auto-generated if left blank.
SESSION_SECRET=